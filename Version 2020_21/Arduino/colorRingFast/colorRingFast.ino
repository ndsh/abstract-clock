#include <Adafruit_NeoPixel.h>

#define LED_PIN    D6
#define LED_COUNT 8

Adafruit_NeoPixel strip(LED_COUNT, LED_PIN, NEO_GRB + NEO_KHZ800);

int h;
int m;
int t = 0;
int indx = 0;
int offsetFromMidnight = 0*60;

    
void setup() {
  Serial.begin(9600);
  strip.begin();           // INITIALIZE NeoPixel strip object (REQUIRED)
  strip.show();            // Turn OFF all pixels ASAP
  strip.setBrightness(50); // Set BRIGHTNESS to about 1/5 (max = 255)
}


void loop() {
  m++;
  if(m >= 60) {
    m = 0;
    h++;
  }
  if(h >= 24) h = 0;
  indx = getIndex(getMinute(h, m));
  //println(index);
  for(int i = 0; i<LED_COUNT; i++) {
    t = indx-i;
    if(t < 0) t = 360-i;
    strip.setPixelColor(i, colors[t][0], colors[t][1], colors[t][2]);
    //.setColor(colors[(t)]);
    
  }
  strip.show();

  Serial.print(h);
  Serial.print(":");
  Serial.println(m);
  delay(200);
}
